{
  "schemaVersion": 1,
  "id": "continuity",
  "version": "${version}",

  "name": "Continuity",
  "description": "Continuity is a Fabric mod built around modern APIs to allow for the most efficient connected textures experience possible. It is designed to provide full Optifine parity for all resource packs that use the Optifine CTM format. Continuity also supports Optifine-format emissive textures for block and item models.",
  "authors": [
    "Pepper_Bell"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/continuity",
    "issues": "https://github.com/PepperCode1/Continuity/issues",
    "sources": "https://github.com/PepperCode1/Continuity"
  },

  "license": "LGPL-3.0-only",
  "icon": "assets/continuity/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "me.pepperbell.continuity.client.ContinuityClient"
    ],
    "modmenu": [
      "me.pepperbell.continuity.client.config.ModMenuApiImpl"
    ]
  },
  "mixins": [
    "continuity.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.11.7",
    "fabric": ">=0.51.0",
    "minecraft": "1.19.x",
    "java": ">=17"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/7rnTYXu"
      }
    }
  }
}
